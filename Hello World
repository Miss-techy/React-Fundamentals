<body>

<div id = "app"></div>



//the class way




class HelloWorld extends React.Component{
  render(){ //method that returns jsx
    return(
    <h2>Hello World</h2>
    )  //contains jsx code
  }
 
}


ReactDOM.render(< HelloWorld /> /*self closing tag*/, document.getElementById('app')); //takes two parameters



